{
  "compilerOptions": {
    "outDir": "./build/ts",
    "target": "es2019",
    "lib": ["DOM", "ES2019"],
    "module": "ES2020",
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
